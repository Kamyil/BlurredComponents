{
  "name": "blurred-components",
  "version": "0.1.0",
  "main": "blurredcomponents.js",
  "repository": "",
  "author": "Kamil Bugajak <kkbugajak@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "start:prod": "webpack-dev-server --config ./webpack.dev.config.js --hot",
    "start:dev": "webpack-dev-server --config ./webpack.dev.config.js",
    "build:prod": "npm install && npm run build:dev",
    "build:dev": "webpack --config webpack.dev.config.js --watch --progress --colors --display-error-details",
    "prettify": "prettier --write src/**/*.ts",
    "stylelint": "stylelint src/scss/**/*.scss --color",
    "fix:styles": "stylelint 'src/scss/**/*.scss' --fix"
  },
  "dependencies": {
    "typescript": "3.1.4"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^1.7.0",
    "@typescript-eslint/parser": "^1.7.0",
    "awesome-typescript-loader": "5.2.0",
    "babel-eslint": "^10.0.1",
    "browser-sync": "^2.26.5",
    "browser-sync-webpack-plugin": "^2.2.2",
    "copy-webpack-plugin": "4.5.4",
    "css-hot-loader": "^1.3.9",
    "css-loader": "^1.0.1",
    "eslint": "5.16.0",
    "eslint-config-airbnb": "17.1.0",
    "eslint-config-prettier": "4.1.0",
    "eslint-loader": "2.1.2",
    "eslint-plugin-import": "2.17.2",
    "fast-sass-loader": "1.4.7",
    "html-webpack-plugin": "^3.2.0",
    "html-webpack-reload-plugin": "^2.0.0",
    "husky": "1.3.1",
    "istanbul-instrumenter-loader": "3.0.1",
    "mini-css-extract-plugin": "0.4.4",
    "node-sass": "4.12.0",
    "postcss-cli": "6.0.1",
    "postcss-loader": "3.0.0",
    "prettier": "1.17.0",
    "resolve-url-loader": "2.3.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "stylelint": "10.0.1",
    "stylelint-config-recommended": "2.2.0",
    "stylelint-scss": "3.6.0",
    "stylelint-webpack-plugin": "^0.10.5",
    "webpack": "4.16.1",
    "webpack-cli": "3.1.0",
    "webpack-dev-server": "^3.3.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --config .prettierrc --write",
      "eslint --fix",
      "stylelint --fix",
      "git add"
    ]
  }
}
